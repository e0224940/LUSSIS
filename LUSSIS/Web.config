<?xml version="1.0"?>

<!--
  For more information on how to configure your ASP.NET application, please visit
  http://go.microsoft.com/fwlink/?LinkId=169433
  -->

<configuration>

  <system.web>
    <compilation debug="true" targetFramework="4.5.2" />
    <httpRuntime targetFramework="4.5.2" />
    
    <!-- To add UserNo to  Profile -->
    <profile>
      <properties>
        <add allowAnonymous="false" defaultValue="" name="EmpNo" readOnly="false" serializeAs="String" type="System.String" />
        </properties>
    </profile>

    <!-- To enable Forms Authentication -->
    <authentication mode="Forms" />
    <roleManager enabled="true" />
  </system.web>

  <!-- For JQuery Issue -->
  <appSettings>
    <add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
  </appSettings>

  <!-- Database Connectivity -->
  <connectionStrings>
    <remove name="LocalSqlServer" />
    <add connectionString="Data Source=(local);Initial Catalog=Lussis;Integrated Security=True" name="LocalSqlServer" providerName="System.Data.SqlClient" />
  </connectionStrings>

  <!-- Role-Directory Mappings -->
  <location path="Department/Deputy">
    <system.web>
      <authorization>
        <deny users="?" />
        <allow roles="DepartmentDeputy" />
      </authorization>
    </system.web>
  </location>
  <location path="Department/Employee">
    <system.web>
      <authorization>
        <deny users="?" />
        <allow roles="DepartmentEmployee" />
      </authorization>
    </system.web>
  </location>
  <location path="Department/Head">
    <system.web>
      <authorization>
        <deny users="?" />
        <allow roles="DepartmentHead" />
      </authorization>
    </system.web>
  </location>
  <location path="Department/Representative">
    <system.web>
      <authorization>
        <deny users="?" />
        <allow roles="DepartmentRepresentative" />
      </authorization>
    </system.web>
  </location>
  <location path="Store/Clerk">
    <system.web>
      <authorization>
        <deny users="?" />
        <allow roles="StoreClerk" />
      </authorization>
    </system.web>
  </location>
  <location path="Store/Manager">
    <system.web>
      <authorization>
        <deny users="?" />
        <allow roles="StoreManager" />
      </authorization>
    </system.web>
  </location>
  <location path="Store/Supervisor">
    <system.web>
      <authorization>
        <deny users="?" />
        <allow roles="StoreSupervisor" />
      </authorization>
    </system.web>
  </location>

</configuration>
